<html lang="en">
<head>
    <title><%= title%></title>
    <link rel="stylesheet" href="/index-style.css">
</head>
<body>
<div class="navbar">
    <h1><%= title%></h1>
</div>
    <div class="body-container">
        <div class="message-board">
            <% for(let i = 0; i < messages.length; i++) {%>
              <div class="messages">
                <h4><%= messages[i].user%></h4>
                  <p><%= messages[i].text%></p>
                  <p><%= messages[i].added%></p>
              </div>
            <%}%>
        </div>
        <a href="/new" class="new-btn">+</a>
    </div>
</body>
</html>